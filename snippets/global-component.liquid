{% style %}
  .font-menu {
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    font-size: 1.4rem;
    line-height: 100%;
  }
  
  .font-paragraph {
    font-family: "Montserrat", sans-serif;
    font-weight: 400;
    font-size: 1.4rem;
    line-height: 110%;
  }

  .font-h1 {
    font-family: "pp_editorial_newultralight", sans-serif;
    font-weight: 400;
    font-size: 3.2rem;
    line-height: 110%;
    letter-spacing: 0;
  }

  .font-h2 {
    font-family: "pp_editorial_newultralight", sans-serif;
    font-weight: 400;
    font-size: 2.8rem;
    line-height: 110%;
  }

  .font-h3 {
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    font-size: 2.4rem;
    line-height: 110%;
  }

  .font-h4 {
    font-family: "pp_editorial_newultralight", sans-serif;
    font-weight: 400;
    font-size: 1.8rem;
    line-height: 110%;
  }

  .btn--white {
    display: block;
    padding: 14px 32px;
    color: #fff;
    border: 1px solid #fff;
    font-family: "Montserrat", sans-serif;
    font-weight: 500;
    font-size: 1.4rem;
    line-height: 100%;
    background-color: transparent
    transition: all .3s ease;
  }

  .btn--white:hover {
    color: #000;
    border: 1px solid #000;
    background-color: #fff
  }

  :root {
    --color-black: #000;
    --color-white: #fff;
  }

  @media screen and (max-width: 768px)  {
    .font-h1 {
      font-size: 2.4rem;
    }

    .font-h4 {
      font-size: 1.4rem;
    }
  }
  
{% endstyle %}