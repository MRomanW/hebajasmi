{{ 'section-custom-code.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 769px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .form-control {
    background: red !important;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding section-custom-code">
  <div class="page-width">
    {% if section.settings.content != blank %}
      <div class="section-custom-code__content font-paragraph">
        {{ section.settings.content }}
      </div>
    {% endif %}

    {% if section.settings.code != blank %}
      <div class="section-custom-code__code">
        {{ section.settings.code }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Custom code",
    "settings": [
      {
        "type": "richtext",
        "id": "content",
        "label": "Content",
        "default": "<p>Content</p>"
      },
      {
        "type": "html",
        "id": "code",
        "label": "Code"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Custom code"
      }
    ]
  }
{% endschema %}

