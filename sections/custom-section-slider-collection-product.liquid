Template section

{{ 'custom-section-slider-collection-product.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 769px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding collection-slider-product">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="font-h1">{{ section.settings.heading }}</h2>
    {% endif %}
    
    <div class="collection-slider-product__wrapper">  
      <div class="swiper-container swiper-container--{{ section.id }}">
        <div class="swiper-wrapper">
          {% for collection in section.settings.collection.products limit: 60 %}
            <a href="{{ collection.url }}" class="swiper-slide">
              <span class="font-h4">{{ forloop.index }}</span>
              {{ 
                collection.featured_image
                | image_url: width: 732
                | image_tag:
                    widths: '183, 443, 732', 
                    loading: 'lazy'
              }} 
            </a>
          {%- endfor -%}
        </div>
        <div class="swiper-button-next collection-slider-product-next">
          {% render 'icon-arrow-slider' %}
        </div>
        <div class="swiper-button-prev collection-slider-product-prev">
          {% render 'icon-arrow-slider' %}
        </div>
    </div>
    </div>
  </div>
</div>

<script>
  const swiper = new Swiper('.swiper-container--{{ section.id }}', {
    centeredSlides: true,
    loop: true,
    speed: 500,
    slidesPerView: 1,
    navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      640: {
        slidesPerView: 2,
      },
      768: {
        slidesPerView: 3,
      },
    },
});
</script>

{% schema %}
  {
    "name": "t:sections.collection-slider.name",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "the looks"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "t:sections.collection-slider.presets"
      }
    ]
  }
{% endschema %}

