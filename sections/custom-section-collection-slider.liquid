{{ 'custom-section-collection-slider.css' | asset_url | stylesheet_tag }}

{%- capture sizes -%}
(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
(min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
{%- endcapture -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.29 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.29 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding collection-slider">
  <div class="page-width">
    <div class="collection-slider__wrapper">
      <div class="collection-slider__information">
        {% if section.settings.collection.metafields.custom.subheading != blank %}
          <span class="collection-banner__subheding font-h4">{{ section.settings.collection.metafields.custom.subheading }}</span>
        {% endif %}
        <h2 class="collection-banner__heading font-h2">{{ section.settings.collection.title }}</h2>
        <a class="collection-banner__btn btn--black" href="{{ section.settings.collection.url }}">{{ 'custom.shop_the_collection' | t }}</a>
      </div>
      
      {% comment %} <div class="collection-slider__products swiper">
        <div class="swiper-wrapper">
          {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
            <a href="{{ product.url }}" class="swiper-slide">
              {{
                product.featured_image
                | image_url: width: 3200
                | image_tag:
                  widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                  alt: product.url.alt,
                  sizes: sizes,
                  loading: 'ease',
                  fetchpriority: 'low'
              }}
            </a>
          {%- endfor -%}
        </div>
      </div>

      <div class="collection-slider-swiper-button-prev swiper-button-prev"></div>
      <div class="collection-slider-swiper-button-next swiper-button-next"></div>  {% endcomment %}
    </div>
  </div>
</div>

{% comment %} <script>
  swiperCollection = new Swiper('.collection-slider__products', {
    slidesPerView: 2.8,
    loop: true,
    spaceBetween: 25,
    keyboardControl: true,
    centeredSlides: true,

    navigation: {
      nextEl: '.collection-slider-swiper-button-next',
      prevEl: '.collection-slider-swiper-button-prev',
    }
  });
</script> {% endcomment %}

{% schema %}
  {
    "name": "Custom Collection slider",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "products_to_show",
        "min": 2,
        "max": 25,
        "step": 1,
        "default": 4,
        "label": "Products to show"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Custom Collection slider"
      }
    ]
  }
{% endschema %}

